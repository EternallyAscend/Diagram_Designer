<view style="width: 100%;" wx:if="{{!texts}}">
  <!-- Title -->
  <view style="height: 5rpx;"></view>
  <view style="width: 100%; text-align: center;" catchtap="showDescription">
    <text style="height: {{titlesHeight}}rpx; width: 100%; font-size: 50rpx; justify-content: center; align-items: center;">{{name}}</text>
  </view>
  <view style="background: #010101; width: 100%; height: 5rpx;"></view>
  <!-- Main Body -->
  <view>
    <!-- Top Graph Tool Bar -->
    <view>
